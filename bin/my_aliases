# MySQL related
alias mysqlprocesslist='mysql -e "show processlist"'
alias mysqlnosleepprocesslist='mysql -e "SELECT * FROM information_schema.processlist WHERE command != \"Sleep\" ORDER BY id;"'

# specific Linux stuff
alias fuck='sudo $(history -p \!\!)'

# Some aliases to start and stop services
alias startmongodb='sudo systemctl start mongodb.service'
alias sb_mongodb34='/local/apps/mongodb34/bin/mongod -dbpath /local/data/mongodb34/data/db'
alias sb_mongodb36='/local/apps/mongodb36/bin/mongod -dbpath /local/data/mongodb36/data/db'
alias sb_mongodb38='/local/apps/mongodb38/bin/mongod -dbpath /local/data/mongodb38/data/db'
alias sb_mongodb40='/local/apps/mongodb40/bin/mongod -dbpath /local/data/mongodb40/data/db'
alias stopmongodb='sudo systemctl stop mongodb.service'
alias startmysql='sudo systemctl start mysql.service'
alias stopmysql='sudo systemctl stop mysql.service'
alias startnginx='sudo systemctl start nginx.service'
alias stopnginx='sudo systemctl stop nginx.service'
alias startapache2='sudo systemctl start apache2.service'
alias stopapache2='sudo systemctl stop apache2.service'
alias startpg='sudo systemctl start postgresql.service'
alias stoppg='sudo systemctl stop postgresql.service'

# general shortcuts
